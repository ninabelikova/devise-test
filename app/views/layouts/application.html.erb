<!DOCTYPE html>
<html>
<head>
  <title>DeviseTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Header -->
<header id="header">
  <h2>Banane</h2>
  <nav id="nav">
    <%= link_to "home", root_path %>
    <% if user_signed_in? %>
    <%= link_to "let me out", destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to "sign up", new_user_registration_path %>
    <%= link_to "let me in", new_user_session_path %>
    <% end %>
  </nav>
</header>

<div class="notifications">
  <% if notice %><%= notice %><% end %>
  <% if notice %><%= alert %><% end %>
</div>
<%= yield %>

</body>
</html>
